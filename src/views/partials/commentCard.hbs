<div class="comment-card card p-2 mb-2">
  <div class="d-flex justify-content-between align-items-center">
    <span class="comment-author fw-bold">{{comment.author.name}}</span>
    <span class="comment-date text-muted small">{{fromNow comment.createdAt}}</span>
  </div>
  <p class="comment-content mb-0">{{comment.content}}</p>
  <div class="d-flex align-items-center mb-3">
      <form action="/comments/{{comment._id}}/like" method="POST">
        <button class="btn btn-sm btn-outline-primary me-2">Like</button>
      </form>
      <span class="like-count">{{comment.likes.length}} likes</span>
  </div>
</div>