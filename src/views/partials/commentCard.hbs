<div class="comment-card card p-2 mb-2" data-comment-id="{{comment._id}}">
  <div class="d-flex justify-content-between align-items-center">
    <span class="comment-author fw-bold">{{comment.author.name}}</span>
    <span class="comment-date text-muted small">{{fromNow comment.createdAt}}</span>
  </div>
  <p class="comment-content mb-0">{{comment.content}}</p>
  <div class="d-flex align-items-center mb-3">
      <form action="/comments/{{comment._id}}/like" method="POST" data-comment-id="{{comment._id}}">
        <button class="btn btn-sm btn-outline-primary me-2 like-btn" data-liked="{{isLiked comment.likes user.id}}">{{#if (isLiked comment.likes user.id)}} Unlike {{else}} Like {{/if}}</button>
      </form>
      <span class="like-count" id="like-count-{{comment._id}}">{{comment.likes.length}} likes</span>
  </div>
</div>