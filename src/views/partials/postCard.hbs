<div class="post-card card mb-4" data-post-id="{{post._id}}">
  <div class="card-body">
    <!-- Post author & title -->
    <h5 class="post-title fw-bold">{{post.title}}</h5>
    <p class="post-author text-muted mb-2">by {{post.author.name}}, {{fromNow post.createdAt}}</p>

    <!-- Post content -->
    <p class="post-content mb-3">{{post.content}}</p>

    <!-- Like button and count -->
    <div class="d-flex align-items-center mb-3 like-wrapper">
      <form action="/posts/{{post._id}}/like" method="POST" data-post-id="{{post._id}}">
        <button class="btn btn-sm btn-outline-primary me-2 like-btn" data-liked="{{isLiked post.likes user.id}}">{{#if (isLiked post.likes user.id)}} Unlike {{else}} Like {{/if}}</button>
      </form>
      <span class="like-count" id="like-count-{{post._id}}">{{pluralize post.likes.length "like" "likes"}}</span>
    </div>

    <!-- Comment form -->
    <form action="/comments/{{post._id}}" method="POST" class="comment-form mb-3" data-post-id="{{post._id}}">
      <div class="input-group">
        <input type="text" name="content" id="content" class="form-control" placeholder="Write a comment..." required>
        <button class="btn btn-primary" type="submit">Comment</button>
      </div>
    </form>

    <!-- Comments list -->
    <div class="comments-section" id="comments-{{post._id}}">
      {{#each post.comments}}
        {{> commentCard comment=this user=../user}}
      {{/each}}
    </div>
  </div>
</div>
