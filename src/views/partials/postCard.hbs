<div class="post-card card mb-4" data-post-id="{{post._id}}">
  <div class="card-body">
    <!-- Post author & title -->
    <h5 class="post-title fw-bold">{{post.title}}</h5>
    <p class="post-author text-muted mb-2">by {{post.author.name}}, {{fromNow post.createdAt}}</p>

    <!-- Post content -->
    <p class="post-content mb-3">{{post.content}}</p>

    <!-- Like button and count -->
    <div class="d-flex align-items-center mb-3">
      <form action="/posts/{{post._id}}/like" method="POST">
        <button class="btn btn-sm btn-outline-primary me-2" data-post-id="{{post._id}}">Like</button>
      </form>
      <span class="like-count" id="like-count-{{post._id}}">{{post.likes.length}} likes</span>
    </div>

    <!-- Comment form -->
    <form action="/comments/{{post._id}}" method="POST" class="comment-form mb-3" >
      <div class="input-group">
        <input type="text" name="content" class="form-control" placeholder="Write a comment..." required>
        <button class="btn btn-primary" type="submit" data-post-id="{{post._id}}">Comment</button>
      </div>
    </form>

    <!-- Comments list -->
    <div class="comments-section" id="comments-{{post._id}}">
      {{#each post.comments}}
        {{> commentCard comment=this}}
      {{/each}}
    </div>
  </div>
</div>
