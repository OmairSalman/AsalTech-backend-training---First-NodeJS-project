<div class="login-page d-flex justify-content-center align-items-center min-vh-100">
  <div class="login-card card p-4 shadow-sm" style="max-width: 400px; width: 100%;">
    <div class="text-center mb-4">
      <!-- Clickable logo -->
      <a href="/">
        <img src="/images/logo-icon.svg" alt="UsersConnect Logo" class="mb-3" style="height: 80px;">
      </a>
      <h2 class="fw-bold text-primary">Login</h2>
    </div>

    <!-- Login Form -->
    <form id="login-form" action="/auth/login" method="POST">
      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <!-- HBS: value="{{email}}" if you want to repopulate on error -->
        <input type="email" class="form-control" id="email" name="email" required placeholder="you@example.com">
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password">
      </div>

      <div id="login-error" class="text-center text-danger mb-2" style="display:none;"></div>

      <!-- Submit -->
      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-lg btn-primary">Login</button>
      </div>

      <!-- Optional: forgot password -->
      <div class="text-center mb-2">
        <a href="/auth/forgot" class="text-decoration-none text-muted">Forgot password?</a>
      </div>

      <!-- Optional: register link -->
      <div class="text-center">
        <p class="mb-0">Don't have an account? <a href="/register" class="text-decoration-none fw-bold" style="color: #6610f2;">Register</a></p>
      </div>
    </form>
  </div>
</div>